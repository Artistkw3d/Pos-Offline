{
  "name": "pos-offline",
  "version": "1.2.4",
  "description": "نظام نقاط البيع - يعمل بدون اتصال (Windows + Android)",
  "author": "Artistkw3d",
  "main": "electron/main.js",
  "scripts": {
    "start": "node electron/server.js",
    "electron:dev": "electron .",
    "electron:build": "electron-builder --win",
    "electron:build-linux": "electron-builder --linux",
    "postinstall": "electron-rebuild",
    "cap:init": "npx cap init pos-offline com.pos.offline --web-dir frontend",
    "cap:add-android": "npx cap add android",
    "cap:sync": "npx cap sync",
    "cap:open-android": "npx cap open android",
    "cap:build-android": "npx cap sync && cd android && ./gradlew assembleRelease"
  },
  "build": {
    "appId": "com.pos.offline",
    "productName": "POS Offline",
    "directories": {
      "output": "dist"
    },
    "files": [
      "frontend/**/*",
      "electron/**/*",
      "database/**/*",
      "routes/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "electron/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerLanguages": [
        "ar"
      ],
      "language": 1025
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    }
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@capacitor/android": "^5.7.0",
    "@capacitor/cli": "^5.7.0",
    "@capacitor/core": "^5.7.0",
    "better-sqlite3": "^11.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1"
  }
}
